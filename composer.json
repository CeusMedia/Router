    "GPL-3.0+"
  ],
  "authors": [
    {
      "name": "Christian WÃ¼rker",
      "email": "christian.wuerker@ceusmedia.de",
      "homepage": "https://ceusmedia.de/",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "office@ceusmedia.de",
    "jabber": "ceus-media@jabber.org"
  },
  "minimum-stability": "dev",
  "require": {
    "php": "^8",
    "ext-memcache": "*",
    "ceus-media/common": "^1.0 | 1.0.x-dev",
    "ceus-media/cache": "^0.5 | 0.5.x-dev"
  },
  "require-dev": {
    "ceus-media/doc-creator": "*",
    "phpunit/phpunit": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-strict-rules": "*",
    "php-parallel-lint/php-parallel-lint": "*"
  },
  "autoload": {
    "psr-4": {
        "CeusMedia\\Router\\": ["src/"]
    }
  },
  "scripts": {
    "dev:install-quiet": "composer install --quiet",
    "dev:update-quiet": "composer update --quiet",
    "dev:stan": [
      "@dev:install-quiet",
      "vendor/bin/phpstan analyze --configuration=phpstan.neon --memory-limit=1G --xdebug --verbose"
    ],
    "dev:stan-clear": [
      "@dev:install-quiet",
      "vendor/bin/phpstan clear-result-cache --configuration=phpstan.neon --verbose"
    ],
    "dev:stan-save": [
      "@dev:install-quiet",
      "vendor/bin/phpstan analyse --configuration=phpstan.neon --generate-baseline phpstan-baseline.neon --xdebug --verbose"
    ],
    "dev:rector": [
      "@dev:install-quiet",
      "vendor/bin/rector process --config=util/rector.php --dry-run"
    ],
    "dev:rector-fix": [
      "@dev:install-quiet",
      "vendor/bin/rector process --config=util/rector.php"
    ],
    "dev:test-syntax": [
      "@dev:install-quiet",
      "vendor/bin/parallel-lint . -j 10 --colors --exclude vendor"
    ],
    "dev:test-units": [
      "@dev:install-quiet",
      "XDEBUG_MODE=coverage php vendor/bin/phpunit --configuration phpunit.xml --testsuite units"
    ]
  },
  "scripts-descriptions": {
    "dev:install": "Installs project dependencies for Development stage",
    "dev:update": "Updates project dependencies for Development stage",
    "dev:stan": "Validate codebase with PHPStan",
    "dev:stan-clear": "Clear PHPStan cache",
    "dev:stan-save": "Store current results in ignore list",
    "dev:rector": "Shows suggestions of configured Rector rules",
    "dev:rector-fix": "Apply currently configured Rector rules to codebase",
    "dev:test-syntax": "Validate code base syntax using PHP linter",
    "dev:test-units": "Run unit tests"
  }

}
